---
import Layout from "../components/Layout.astro";
import image1 from "../assets/images/task-1.jpg.webp";
import image2 from "../assets/images/task-2.jpg.webp";
import image3 from "../assets/images/task-3.jpg.webp";
let image = image1;
const interval = setInterval(() => {
  image = image2
}, 6000)
---

<Layout title="Astro Quickstart">
  <main>
    <!-- TODO: Should overlap with the container -->
    <!-- <header></header> -->
    <div class="container">
      <div class="container__left"></div>
      <div class="container__right">
        <img src={image2} />
      </div>
    </div>
    <!-- <footer class="footer">
        Arman
      </footer> -->
  </main>
</Layout>

<style lang="scss">
  .container {
    display: flex;
    flex-direction: row;
    width: 100vw;
    height: 100vh;
    &__left {
      width: 55%;
      border-right: 1px solid red;
    }

    &__right {
      position: relative;
      display: flex;
      flex: 1 0 0;
      img {
        position: absolute;
        top: -50px;
        width: 100%;
        height: 100%;
        animation: slideIn 6s infinite linear;
        -webkit-animation: slideIn 6s infinite linear;
        // transition-timing-function: ease-in; TODO: Ease in should be occuring
        // transition-duration: infinite;
        // transition-timing-function: linear;
        // transition-delay: 7s;
      }
      @-webkit-keyframes slideIn {
        100% {
          top: -20px;
        }
      }
      @keyframes slideIn {
        100% {
          top: -20px;
        }
      }
    }
  }
</style>
